doctype html
html(lang='en')
  head
    include ./head.pug
  body#page-top(data-spy='scroll', data-target='#navtop')
    // Navigation
    nav.navbar.navbar-dark.navbar-custom.navbar-fixed-top(role='navigation')#navtop
      .container
        .navbar-nav
          a.navbar-brand.page-scroll(href='#page-top')
            i.fa.fa-home
            span Home
          button.navbar-toggler.hidden-sm-up.pull-xs-right(type="button",data-toggle="collapse",data-target="#navbarLinks",aria-controls="navbarLinks",aria-expanded="false",aria-label="Toggle navigation")
            i.fa.fa-bars
        // Collect the nav links, forms, and other content for toggling
        div.collapse.navbar-toggleable-xs.pull-xs-right#navbarLinks
          ul(class="nav navbar-nav", role="tablist")
            li.nav-item.nav-pills
              a.nav-link.page-scroll(href='#resume') Resume
            li.nav-item.nav-pills
              a.nav-link.page-scroll(href='#contact') Contact
    // Intro Header
    header.intro
      .intro-body
        .container
          .row.flex-items-xs-center
            .col-lg-8
              h1.brand-heading Bluestealth
              p.intro-text Software Developer
              a.btn.btn-circle.page-scroll(href='#resume')
                i.fa.fa-angle-double-down.animated
    // Download Section
    section#resume
        .container.text-xs-center
          .row.flex-items-xs-center
            .col-xs-12
              h2 Download Resume
              p You can download my resume in the formats below
          .row.flex-items-xs-center
            .col-xs-12.col-sm-4
              a.btn.btn-primary.btn-lg(href='doc/Resume.pdf')
                i.fa.fa-file-pdf-o.fa-fw
                | PDF
            .col-xs-12.col-sm-4
              a.btn.btn-primary.btn-lg(href='doc/Resume.docx')
                i.fa.fa-file-word-o.fa-fw
                | DOC
            .col-xs-12.col-sm-4
              a.btn.btn-primary.btn-lg(href='doc/Resume.odt')
                i.fa.fa-file-text-o.fa-fw
                | ODT
    // Contact Section
    section#contact.container.content-section.text-xs-center
      .row.flex-items-xs-center
        .col-md-8
          h2 Contact Bluestealth
          p
            | Feel free to email me about potential job offers, comments about the site, or just to say hi.
          ul.list-unstyled
            li
              a.contact-details(href='mailto:bluestealth@bluestealth.pw')
                i.fa.fa-envelope-o.fa-fw
                | bluestealth@bluestealth.pw
            li
              a.contact-details(href='mailto:michael.ryan.dempsey@gmail.com')
                i.fa.fa-envelope-o.fa-fw
                | michael.ryan.dempsey@gmail.com
            li
              a.contact-details(href='tel:+15713089167')
                i.fa.fa-phone.fa-fw
                | (571) 308-9167
          p Bainbridge IS, WA 98110
      //Social Buttons
      .row.text-xs-center#social
        .col-xs-12.col-md-6.col-lg-3
          a.btn.btn-secondary.btn-social.btn-lg(href='https://github.com/bluestealth', target='_blank')
            i.fa.fa-github.fa-fw
            span.network-name Github
        .col-xs-12.col-md-6.col-lg-3
          a.btn.btn-secondary.btn-social.btn-lg(href='http://codepen.io/bluestealth/', target='_blank')
            i.fa.fa-codepen.fa-fw
            span.network-name Codepen
        .col-xs-12.col-md-6.col-lg-3
          a.btn.btn-secondary.btn-social.btn-lg(href='https://plus.google.com/111588817619649017844/posts', target='_blank')
            i.fa.fa-google-plus.fa-fw
            span.network-name Google
        .col-xs-12.col-md-6.col-lg-3
          a.btn.btn-secondary.btn-social.btn-lg(href='https://twitter.com/bluestealth001', target='_blank')
            i.fa.fa-twitter.fa-fw
            span.network-name Twitter
    footer
      include ./footer.pug
      //Page Specific Javascript
      script(src='js/index.js')
